# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  review_with_check:
    if:
      - true
    run:
      - action: add-reviewers@v1
        args:
          reviewers: [EladKohavi]
          wait_for_all_checks: true
      
  "catch deprecated 1":
    if:
      - false
    run:
      - action: request-changes@v1
        args:
          comment: |
            deprecated
