automations:
  invoke_action:
    if: 
      - true
    run:
      - action: invoke-github-action@v1
        args:
          owner: yeelali14
          repo: pasha
          workflow: .github/workflows/example.yml
          ref: main
          inputs: {{ inputs_var | dump }}

inputs_vars: 
  client_payload: {{ payload_content | dump | dump }}
  trigger_if_gitstream: "true"

payload_content: 
  prId: 856
  repo: "yeelali14/EuropeanPaintings"
  trigger_if_gitstream: true