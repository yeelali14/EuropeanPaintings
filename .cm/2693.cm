manifest:
    version: 1.0


triggers:
  exclude:
    branch:
      - l10n_dev
      - dev
      - r/([Dd]ependabot|[Rr]enovate)/

automations:
  just_comment:
    if: 
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            comment 1
  code_experts:
    if: 
      - {{ repo | codeExperts(gt=10) | length == 1 }}
    run:
      - action: add-comment@v1
        args:
          comment: |
            Reviewers {{ repo | codeExperts(gt=10) }}