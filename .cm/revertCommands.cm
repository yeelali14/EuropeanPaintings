# -*- mode: yaml -*-

manifest:
  version: 1.0

on:
  - commit

automations:
  request_screenshot:
    if:
      - true
      - {{ files | length < 2 }}
    run:
      - action: add-label@v1
        args:
          label: 'no-screenshot'
          color: '#FF000A'
      - action: request-changes@v1
        args:
          comment: |
            Be a life saver ðŸ›Ÿ by adding a screenshot of the changes you made.