manifest:
    version: 1.0

automations:
  just_comment:
    if: 
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            escape result: {{ pr.description | escapeLineBreaks }}
  explain_code_experts:
    if:
      - true
    run:
      - action: explain-code-experts@v1 
        args:
          gt: 10 