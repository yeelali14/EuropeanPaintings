# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  merge_automation:
    if:
      - {{ files | length == 3 }}
    run:
      - action: merge@v1
  catch_deprecated:
    if:
      - {{ files | length == 1 }}
    run:
      - action: add-label@v1
        args:
          label: 'test error'
          color: 'da12'